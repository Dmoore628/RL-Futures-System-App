FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code and configuration files
COPY tsconfig.json vite.config.ts index.html ./
COPY src ./src
COPY content ./content
COPY jest.config.js ./
COPY .eslintrc.js ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]


